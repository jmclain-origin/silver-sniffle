{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "**/*.test.ts",
    "**/*.log",
    "dist/**/*",
    "build/**/*",
    "out/**/*",
    "**/__tests__/**"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony",
    "ts": "ts-node"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": ["src/**/*.js", "src/**/*.json", "src/**/*.cjs", "src/**/*.mjs", "src/**/*.ts"],
  "env": {
    "NODE_ENV": "development",
    "DEPLOY_ENV": "localhost"
  },
  "ext": "js,json,mjs,cjs,ts",
  "exec": "pnpm start"
}
